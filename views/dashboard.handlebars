<section class='section'>
  <div class='tile is-ancestor' id="createreview">
    <div class='tile is-parent s-vertical'>
      <article class='tile is-child box'>
        <h2 class="">Search for a Book</h2>
        <p class='subtitle'>Create a review by selecting a book from your search</p>
        <div class='content'>
          <form class="book-search">
            <input type="text" id="booksearch"></input>
            <button id="gobooksearch" class='button'><span class="oi oi-magnifying-glass"></span></button>
          <div id="bookseachresults"></div>
          </form>
        </div>
      </article>
    </div>
  </div>
  <div class='tile is-ancestor' id='review-list'>
    <div class='tile is-parent s-vertical'>
      <article class='tile is-child box'>
        <h2 class="">Reviews</h2>
        <p class='subtitle'></p>
        <div class='content'>
          <ul>
            {{#each reviews as |review|}}
            <li class='py-2'>
              {{> review-info review}}
            </li>
            {{/each}}
          </ul>
        </div>
        </article>
      </div>
    </div>
</section>


<script src="/javascript/get-book.js"></script>
