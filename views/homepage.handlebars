{{#if loggedIn}}
<section class='section'>
  {{#each reviews as |review|}}
      {{> review-info review}}
  {{/each}}
</section>
{{else}}
<section class='section'>
  <article class='intro'>It looks like you're not logged in! 
  </article>
  <form class="control login-form">
      <a href="/login"><button class="button p-2 m-2" type="submit">login</button></a>
        <a href="/signup"><button class="button p-2 m-2" type="submit">sign up</button></a>
    </form>
</section>
{{/if}}