{{#if loggedIn}}
<section class='section review-section'>
  <div class='tile is-ancestor' id='review-list'>
    <div class='tile is-parent s-vertical'>
      <article class='tile is-child box'>
        <h2 class="title">Reviews</h2>
        <p class='subtitle'></p>
        <div class='content'>
            {{#each reviews as |review|}}
              {{> review-info review}}
            {{/each}}
        </div>
        </article>
      </div>
    </div>
</section>
{{else}}
<section class='section'>
  <article class='intro'>It looks like you're not logged in! 
  </article>
  <form class="control login-form">
      <a href="/login"><div class="button p-2 m-2">login</div></a>
        <a href="/signup"><div class="button p-2 m-2">sign up</div></a>
    </form>
</section>
{{/if}}